@model Category

@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name">Category</label>
            <textarea asp-for="Name" id="Name" class="ckeditor form-control" maxlength="number"></textarea>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

