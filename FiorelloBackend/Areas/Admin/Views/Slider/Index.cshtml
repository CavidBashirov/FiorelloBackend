@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center mt-3 mb-3">Sliders</h1>
    <a class="btn btn-success text-white" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@slider.Img" alt="image" />
                        </td>
                        <td>
                            @if (slider.Status)
                            {
                                <div style="width:20px; height:20px; background-color:#00ff00;border-radius:50%; cursor:pointer" class="status-true"></div>
                            }else
                            {
                                <div style=" margin-top:10px;width:20px; height:20px; background-color:red;border-radius:50%;cursor:pointer" class="status-false"></div>
                            }
                            
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                            <a class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
               
            </tbody>
        </table>
    </div>

</div>

